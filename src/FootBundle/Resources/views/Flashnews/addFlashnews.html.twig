{% extends "::base2.html.twig" %}
{% block stylesheets %}
    <link href="{{ asset('src/css/summernote/summernote.css') }}" rel="stylesheet">
    <link href="{{ asset('src/css/summernote/summernote-bs3.css') }}" rel="stylesheet">
    <link href="{{ asset('src/css/datapicker/datepicker3.css') }}" rel="stylesheet">

{% endblock %}

 {% block actionArea %}
     <a href="{{ path('foot_list_news') }}" class="btn btn-primary"><i class="fa fa-list-ul"></i> Flash news list</a>
 {% endblock %}
{% block titleContaint %}
    <h2>Add Flash news</h2>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>
            <a>Flash news</a>
        </li>
        <li class="active">
            <strong>Add Flash news</strong>
        </li>
    </ol>
{% endblock %}
{% block FlashnewsActive %}class="active"{% endblock %}
{% block FlashnewsAddctive %}class="active"{% endblock %}
{% block Containt %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Flash News</h5>
                </div>
                <div class="ibox-content">

                    <form method="post" action="{{ path('foot_add_flashnews') }}" enctype="multipart/form-data">
                        {{ form_row(form._token) }}
                        {% if not form.vars.valid %}
                            <div class="alert alert-danger">
                                {{ form_errors(form) }}
                            </div>
                        {% endif %}
                        {% if app.session.flashBag.has('success') %}
                            {% for flashMessage in app.session.flashbag.get('success') %}
                                <div class="alert alert-success">
                                    {{ flashMessage }}
                                </div>
                            {% endfor %}
                        {% endif %}


                        <div class="form-group">
                            <label>Content</label>
                            {{ form_widget(form.flashnews_category) }}
                        </div>

                        <div class="form-group">
                            <label >News </label>
                            {{ form_widget(form.news_id) }}
                        </div>

                        <div class="form-group">
                            <label >Urgent </label>
                            {{ form_widget(form.flashnews_urgent) }}
                        </div>


                        <div class="form-group">
                            <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-plus-square-o"></i> Add</button>
                        </div>
                        <br>
                        <br>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('src/js/summernote/summernote.min.js') }}"></script>
    <script src="{{ asset('src/js/datapicker/bootstrap-datepicker.js') }}"></script>

    <script>
        $(document).ready(function(){

            $('.summernote').summernote();

        });
        $('#data_1 .input-group.date').datepicker({
            todayBtn: "linked",
            keyboardNavigation: false,
            forceParse: false,
            calendarWeeks: true,
            autoclose: true
        });
    </script>

{% endblock %}

